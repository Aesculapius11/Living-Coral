{
  "name": "living-coral-blog",
  "version": "1.0.0",
  "private": true,
  "description": "现代化个人博客（Eleventy + Tailwind）主题色 #FC766A",
  "scripts": {
    "dev": "concurrently \"npx eleventy --serve\" \"npm:css:watch\"",
    "build": "npx eleventy && npm run css:build",
    "css:build": "npx tailwindcss -i ./src/styles/tailwind.css -o ./_site/assets/styles.css --minify",
    "css:watch": "npx tailwindcss -i ./src/styles/tailwind.css -o ./_site/assets/styles.css --watch",
    "clean": "rimraf _site .cache"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@tailwindcss/typography": "^0.5.12",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "luxon": "^3.5.0",
    "postcss": "^8.4.39",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.10"
  }
}


